#MusicListWidget {
  border-radius: 4px;
  background-color: rgba(255, 255, 255, 0);
}

#MusicListActionBar {
  background-color: rgba(255, 255, 255, 1);
}

#MusicListEmptyHits {
  font-size: 24px;
  color: #d0d0d0;
  qproperty-alignment: AlignCenter;
  background-color: rgba(255, 255, 255, 1);
}

#MusicListPlayAll {
  font-size: 12px;
  padding: 0 10 0 10;
  border: none;
  border-radius: 4.0px;
  qproperty-icon: url(:/common/image/play_all.svg);
}

#MusicListPlayAll:hover {
  border: 1px solid rgba(0, 0, 0, 0.08);
  background: qlineargradient(x1: 0 y1: 0, x2: 0 y2: 1, stop: 0 rgba(255, 255, 255, 40%), stop: 1 rgba(255, 255, 255, 20%));
}

#MusicListPlayAll:pressed {
  color: #2ca7f8;
  border: 1px solid rgba(0, 0, 0, 8%);
  background: qlineargradient(x1: 0 y1: 0, x2: 0 y2: 1, stop: 0 rgba(255, 255, 255, 80%), stop: 1 rgba(255, 255, 255, 60%));
}
